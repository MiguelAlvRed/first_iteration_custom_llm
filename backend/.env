# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/cro_retention_assistant

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_here

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Web Scraping Configuration (if using a service like Scraperapi)
SCRAPER_API_KEY=your_scraper_api_key_here

# PDF Processing (if using a cloud service for PDF processing)
PDF_API_KEY=your_pdf_api_key_here

# File Storage (if using cloud storage like AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region
S3_BUCKET_NAME=your_s3_bucket_name

# Logging Service (if using a service like Sentry)
SENTRY_DSN=your_sentry_dsn_here

# Rate Limiting (if using Redis for rate limiting)
REDIS_URL=your_redis_url_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Email Service (if implementing email notifications)
SMTP_HOST=your_smtp_host
SMTP_PORT=your_smtp_port
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# Vector Database (if using Pinecone for efficient similarity search)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment

# Analytics (if integrating with a service like Mixpanel)
MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags (if using a service like LaunchDarkly)
LAUNCHDARKLY_SDK_KEY=your_launchdarkly_sdk_key